{
    "name": "sabido/challenge",
    "description": "",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/migrations": "^3.1",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/dotenv": "*",
        "symfony/flex": "*",
        "symfony/form": "5.2",
        "symfony/framework-bundle": "*",
        "symfony/monolog-bundle": "*",
        "symfony/orm-pack": "*",
        "symfony/security-bundle": "*",
        "symfony/serializer": "*",
        "symfony/serializer-pack": "*",
        "symfony/translation": "*",
        "symfony/validator": "*",
        "symfony/yaml": "*"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^6.5",
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "phpunit/phpunit": "^9",
        "symfony/debug-bundle": "*",
        "symfony/phpunit-bridge": "^5.2",
        "symfony/stopwatch": "*",
        "symfony/var-dumper": "*",
        "symfony/web-profiler-bundle": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php73": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.dist', '.env');\""
        ],
        "create-db": [
            "php bin/console doctrine:database:create --if-not-exists",
            "php bin/console doctrine:migration:migrate --allow-no-migration -n"
        ],
        "load-fixtures-db": [
            "php bin/console doctrine:fixtures:load -n"
        ],
        "setup": [
            "docker-compose pull",
            "docker pull jakzal/phpqa:php7.4-alpine",
            "@post-root-package-install"
        ],
        "configure": [
            "@composer i --no-interaction --no-progress --no-scripts",
            "@create-db",
            "@install-assets",
            "@post-root-package-install"
        ],
        "test": "php -d xdebug.mode=coverage vendor/bin/phpunit -c phpunit.xml.dist --testdox -vvv",
        "phpstan": "docker run --init -it --rm -v \"$(pwd):/var/www\" -w /var/www jakzal/phpqa:php7.4-alpine phpstan",
        "phpmd": "docker run --init -it --rm -v \"$(pwd):/var/www\" -w /var/www jakzal/phpqa:php7.4-alpine phpmd src text cleancode,codesize,controversial,design,naming,unusedcode"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "5.2"
        },
        "incenteev-parameters": {
            "keep-outdated": true,
            "file": ".env"
        },
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
